<?xml version="1.0" encoding="utf-8" ?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:ads="http://schemas.android.com/apk/res-auto"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="fill_parent"
android:layout_height="fill_parent"
android:orientation="vertical">

<ScrollView
    android:layout_width="fill_parent"
    android:layout_height="0.0dip"
    android:layout_weight="1.0"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white">

        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:orientation="vertical"
            android:paddingStart="16.0dip"
            android:paddingEnd="16.0dip"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/close_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="16.0dip"
                    android:visibility="visible"
                    android:contentDescription="Close"
                    app:srcCompat="@drawable/ic_close" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:fontFamily="casual"
                    android:gravity="center"
                    android:text="@string/app_name"
                    android:textColor="@android:color/white"
                    android:textSize="20.0sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/share_app"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="16.0dip"
                    app:srcCompat="@drawable/share_drawable"
                    android:contentDescription="Share" />
            </LinearLayout>

            <TextView
                android:id="@+id/path"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAllCaps="true"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/question"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16.0dip"
                android:layout_marginBottom="16.0dip"
                android:background="@drawable/category_bg"
                android:padding="16.0dip"
                android:textColor="@android:color/black"
                android:textSize="16.0sp" />

            <androidx.appcompat.widget.AppCompatSeekBar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="10"
                android:progress="0"
                android:id="@+id/seekBar"/>

            <TextView
                android:id="@+id/q_no"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16.0dip"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:textSize="18.0sp"
                android:textStyle="bold" />
        </LinearLayout>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/bookmark_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16.0dip"
            android:clickable="true"
            app:layout_constraintBottom_toTopOf="@+id/textView8"
            app:layout_constraintEnd_toEndOf="parent"
            app:srcCompat="@drawable/bookmark_border"
            android:focusable="true" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_marginStart="24.0dip"
            android:layout_marginTop="24.0dip"
            android:layout_marginEnd="24.0dip"
            android:textColor="@android:color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout3" />

        <LinearLayout
            android:id="@+id/option_container"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_marginStart="24.0dip"
            android:layout_marginEnd="24.0dip"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView8">

            <Button
                android:id="@+id/a"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16.0dip"
                android:background="@drawable/qus_btn_border"
                android:gravity="start|center"
                android:paddingStart="16.0dip"
                android:paddingEnd="16.0dip"
                android:stateListAnimator="@null"
                android:textAllCaps="false"
                android:textColor="@color/grey"
                android:textSize="16.0sp" />

            <Button
                android:id="@+id/b"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16.0dip"
                android:background="@drawable/qus_btn_border"
                android:gravity="start|center"
                android:paddingStart="16.0dip"
                android:paddingEnd="16.0dip"
                android:stateListAnimator="@null"
                android:textAllCaps="false"
                android:textColor="@color/grey"
                android:textSize="16.0sp" />

            <Button
                android:id="@+id/c"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16.0dip"
                android:background="@drawable/qus_btn_border"
                android:gravity="start|center"
                android:paddingStart="16.0dip"
                android:paddingEnd="16.0dip"
                android:stateListAnimator="@null"
                android:textAllCaps="false"
                android:textColor="@color/grey"
                android:textSize="16.0sp" />

            <Button
                android:id="@+id/d"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16.0dip"
                android:background="@drawable/qus_btn_border"
                android:gravity="start|center"
                android:paddingStart="16.0dip"
                android:paddingEnd="16.0dip"
                android:stateListAnimator="@null"
                android:textAllCaps="false"
                android:textColor="@color/grey"
                android:textSize="16.0sp" />
        </LinearLayout>


        <Button
            android:id="@+id/share_btn"
            android:layout_width="0.0dip"
            android:layout_height="40.0dip"
            android:layout_marginEnd="24.0dip"
            android:layout_marginBottom="24.0dip"
            android:background="@drawable/btn_shape"
            android:backgroundTint="#ffff4848"
            android:drawableStart="@drawable/share"
            android:drawablePadding="8.0dip"
            android:paddingStart="16.0dip"
            android:paddingEnd="16.0sp"
            android:stateListAnimator="@null"
            android:text="Share"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="16.0sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/next_btn"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="@+id/option_container"
            app:layout_constraintTop_toBottomOf="@+id/option_container" />


        <Button
            android:id="@+id/next_btn"
            android:layout_width="0.0dip"
            android:layout_height="40.0dip"
            android:layout_marginStart="24.0dip"
            android:layout_marginBottom="24.0dip"
            android:background="@drawable/next_btn"
            android:enabled="false"
            android:paddingStart="16.0dip"
            android:paddingEnd="16.0sp"
            android:stateListAnimator="@null"
            android:text="Next"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="16.0sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/option_container"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/share_btn"
            app:layout_constraintTop_toBottomOf="@+id/option_container" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>

<com.google.android.gms.ads.AdView
    android:id="@+id/adViewqus"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    app:adSize="SMART_BANNER"
    app:adUnitId="@string/banner_ID" />
</LinearLayout>
